<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/listingImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/pentbruk3"/>

        <TextView
            android:id="@+id/txtListingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listingImage"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Listing Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtListingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtListingTitle"
            android:layout_marginTop="7dp"
            android:padding="10dp"
            android:text="Listing Price"
            android:textStyle="italic" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>